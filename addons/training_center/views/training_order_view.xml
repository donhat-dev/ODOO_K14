<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="training_order_list" model="ir.ui.view">
        <field name="name">training.order.list</field>
        <field name="model">training.order</field>
        <field name="arch" type="xml">
            <list string="Training Orders"
                duplicate="false">
                <field name="order_number"></field>
                <!-- <field name="customer_name"></field> -->

                <field name="customer_id"></field>
                <field name="lead_id"></field>

                <field name="order_date"></field>
            </list>
        </field>
    </record>

    <record id="training_order_form" model="ir.ui.view">
        <field name="name">training.order.form</field>
        <field name="model">training.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="is_approved_1" invisible="1"></field>
                    <field name="is_approved_2" invisible="1"></field>
                    <field name="state" invisible="1"></field>
                    <button string="Approve 1"
                        type="object"
                        name="button_approve_1"
                        invisible="not is_approved_1">
                    </button>
                    <button string="Approve 2"
                        type="object"
                        name="button_approve_2"
                        invisible="not is_approved_2 or state != 'approved_1'"></button>
                    <field name="state" widget="statusbar"></field>
                </header>
                <sheet>
                    <group string="Order Details">
                        <group>
                            <field name="customer_id"
                                options='{"no_create": False, "no_open": False}'
                            ></field>
                            <field name="lead_id"></field>
                            <field name="order_number" invisible="1"></field>
                            <field name="order_number"
                                string="ID" readonly="order_number"></field>
                            <field name="approve_1_user_id"></field>
                            <field name="approve_2_user_id"></field>
                            <field name="total_amount" readonly="1"></field>
                        </group>
                        <group>
                            <field name="user_id"></field>
                            <field name="customer_name"
                                invisible="not order_number"
                            ></field>
                            <field name="order_date" invisible="not order_number"></field>
                        </group>


                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids" context="{'check_quantity_limit': False}">
                                <list editable="bottom">
                                    <field name="name"></field>
                                    <!-- <field name="description"></field> -->
                                    <!-- <button name="action_open_options_wizard"
                                    type="object"
                                    string="Options"
                                    class="oe_highlight" /> -->
                                    <field name="quantity"></field>
                                    <field name="unit_price"></field>
                                    <field name="total_price"></field>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="training_order_search" model="ir.ui.view">
        <field name="name">training.order.search</field>
        <field name="model">training.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_number"
                    filter_domain="['|', ('order_number', 'ilike', self),('customer_id', 'ilike', self)]"></field>
                <field name="customer_id"></field>
                <filter name="My Orders" domain="[('approve_1_user_id', '=', uid)]"></filter>
                <separator />
                <filter name="Total Amount > 1000" domain="[('total_amount', '>', 1000)]"></filter>
                <separator />
                <filter name="Draft" domain="[('state', '=', 'draft')]"></filter>
                <filter name="Approved 1" domain="[('state', '=', 'approved_1')]"></filter>
                <filter name="Approved 2" domain="[('state', '=', 'approved_2')]"></filter>
                <group expand="0">
                    <filter name="State" domain="[]"
                        context="{'group_by':  'state'}"></filter>
                </group>
            </search>
        </field>
    </record>

    <record id="training_order_kanban" model="ir.ui.view">
        <field name="name">kanban view</field>
        <field name="model">training.order</field>
        <field name="priority">16</field>
        <field name="arch" type="xml">
            <kanban string="training.order">
                <templates>
                    <t t-name="card">
                        <field name="order_number" class="fw-bold fs-1" />
                        <field name="customer_name" display="full" />
                        <field name="total_amount" display="full" widget="monetary"
                            options="{&quot;no_symbol&quot;:true}" class="fw-bold fs-3 text-danger" />
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="training_order_actions" model="ir.actions.act_window">
        <field name="name">Training Order</field>
        <field name="res_model">training.order</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="search_view_id" ref="training_center.training_order_search" />
        <field name="view_id" ref="training_order_list" />
    </record>


    <menuitem
        id="training_order_root"
        name="Training Order"
        sequence="10"
        web_icon="fa-shopping-cart"
    />

    <menuitem
        id="training_order_menu"
        name="Order"
        parent="training_center.training_order_root"
        action="training_center.training_order_actions"
        sequence="1"
    />
</odoo>