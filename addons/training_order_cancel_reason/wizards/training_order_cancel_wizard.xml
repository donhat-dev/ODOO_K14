<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View training.order.cancel.wizard form -->
    <record id="view_training_order_cancel_wizard_form" model="ir.ui.view">
        <field name="name">view.training.order.cancel.wizard.form</field>
        <field name="model">training.order.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Training Order Cancel Wizard">
                <group>
                    <field name="type" invisible="1"></field>
                    <field name="training_order_id" invisible="1"></field>
                    <field name="cancel_reason" widget="text" invisible="type != '1'"></field>
                    <field name="cancel_date" invisible="type != '2'"></field>
                </group>
                <footer>
                    <button name="action_confirm" type="object" class="btn-primary"
                        string="Confirm" data-hotkey="q" />
                    <button type="object" class="btn-secondary" string="Cancel"
                        special="cancel" data-hotkey="x" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_training_order_cancel_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">training.order.cancel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>